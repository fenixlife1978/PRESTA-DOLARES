
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Socio {
  id             Int        @id @default(autoincrement())
  nombreCompleto String
  cedula         String?
  telefono       String?
  direccion      String?
  prestamos      Prestamo[]
  pagos          Pago[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Prestamo {
  id                Int       @id @default(autoincrement())
  monto             Float     // Monto original del capital
  interes           Float?    // Tasa de interés (% o fijo)
  cuotas            Int?      
  estado            String    @default("Activo") // "Activo" o "Pagado"
  socio             Socio     @relation(fields: [socioId], references: [id])
  socioId           Int
  pagos             Pago[]

  fechaOtorgamiento DateTime
  tipoPrestamo      String    
  tipoInteres       String    
  esLibreAbono      Boolean   @default(false)
  
  saldoInteres      Float     @default(0) // Interés acumulado pendiente de pago

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pago {
  id            Int      @id @default(autoincrement())
  monto         Float    // Monto total del pago
  capital       Float    // Parte del pago que va a capital
  interes       Float    // Parte del pago que va a interés
  fechaPago     DateTime @default(now())
  esLibreAbono  Boolean  @default(false)
  socio         Socio    @relation(fields: [socioId], references: [id])
  socioId       Int
  prestamo      Prestamo @relation(fields: [prestamoId], references: [id])
  prestamoId    Int
  numeroCuota   Int?
  totalCuotas   Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
